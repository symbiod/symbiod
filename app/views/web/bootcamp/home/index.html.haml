%h1.cover-heading= t('bootcamp.landing.title')
%p.lead
  = t('bootcamp.landing.body')
%p.lead
  -# TODO: Good candidate for cell extraction
  - if current_user
    - if wizard.active?
      = link_to t('bootcamp.landing.proceed_with_wizard'), current_wizard_step_url,
                                                           class: 'btn btn-lg btn-secondary'
    - elsif DashboardPolicy.new(current_user, nil).index?
      = link_to t('bootcamp.landing.go_to_dashboard'), dashboard_root_url,
                                                       class: 'btn btn-lg btn-secondary'
    - else
      .alert.alert-danger{ role: 'alert' }
        = t('bootcamp.landing.account_disabled')
  - else
    = link_to t('bootcamp.landing.github_login'), bootcamp_auth_at_provider_url(provider: :github),
                                                  id: 'join-via-github',
                                                  class: 'btn btn-lg btn-secondary'

