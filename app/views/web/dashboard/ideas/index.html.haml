%h3
  = t('dashboard.ideas.headers.index')
  = link_to t('dashboard.ideas.button.new'), new_dashboard_idea_url,
                                             class: 'btn btn-sm btn-info' if policy(%i[dashboard idea]).new?
%table.table.table-striped.table-sm
  %thead
    %tr
      %th= t('dashboard.ideas.table.name')
      %th= t('dashboard.ideas.table.status')
      %th= t('dashboard.ideas.table.author')
      %th= t('dashboard.ideas.table.created(D/M/Y)')
    - @ideas.each do |idea|
      %tr
        %td= link_to idea.name, dashboard_idea_url(idea)
        %td= idea.state
        %td= idea.author.email
        %td= idea.author.created_at.strftime("%d-%m-%Y")
%br
= paginate @ideas
